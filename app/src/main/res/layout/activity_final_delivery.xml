<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".Admin.FinalDelivery">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="50dp"
        android:text="Deliery Now"
        android:textStyle="bold"
        android:textColor="@color/black"/>
    <TextView
        android:id="@+id/deliveryCodeTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textSize="20dp"
        android:text="Deliery Code"
        android:textColor="@color/black"/>
    <TextView
        android:id="@+id/deliveryDateTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textSize="20dp"
        android:text="Deliery Date"
        android:textColor="@color/black"/>
    <TextView
        android:id="@+id/deliveryHourTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textSize="20dp"
        android:text="Deliery Hours"
        android:textColor="@color/black"/>


    <TextView
        android:id="@+id/carCodeTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textSize="20dp"
        android:text="Car Code"
        android:textColor="@color/black"/>
    <TextView
        android:id="@+id/OrderCodeTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textSize="20dp"
        android:text="Order Code"
        android:textStyle="bold"
        android:textColor="@color/black"/>

    <Button
        android:id="@+id/deliveryNowBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Delivery NOw"
        android:textSize="20sp"
        android:padding="10dp"
        android:layout_marginTop="50dp"/>



</LinearLayout>